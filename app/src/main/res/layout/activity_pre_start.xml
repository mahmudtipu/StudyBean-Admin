<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PreStart">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Image Question"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_margin="2dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAllCaps="false"
                            android:background="#ffffff"
                            android:textColor="#000"
                            android:text="False"
                            android:id="@+id/imageFalseId"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/imageTrueId"
                            android:layout_margin="2dp"
                            android:textAllCaps="false"
                            android:background="#ffffff"
                            android:textColor="#000"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="True"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:id="@+id/cardImageId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Add image question"/>

                    <ImageView
                        android:id="@+id/imageId"
                        android:background="@drawable/gallery"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Question"/>

                    <EditText
                        android:id="@+id/questionId"
                        android:hint="e. g. What is heart of algebra?"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/btnAnswerA"
                    android:layout_width="0dp"
                    android:background="#ffffff"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:hint="Answer A"/>

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/btnAnswerB"
                    android:background="#ffffff"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:hint="Answer B"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:id="@+id/btnAnswerC"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:hint="Answer C"/>

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/btnAnswerD"
                    android:background="#ffffff"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:hint="Answer D"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correct Answer"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/correctAId"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:background="#ffffff"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:hint="Answer A"/>

                        <Button
                            android:id="@+id/correctBId"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:layout_width="0dp"
                            android:textSize="18sp"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:hint="Answer B"/>

                        <Button
                            android:id="@+id/correctCId"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:layout_width="0dp"
                            android:padding="5dp"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:hint="Answer C"/>

                        <Button
                            android:id="@+id/correctDId"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:layout_width="0dp"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:hint="Answer D"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Short Description"/>

                    <EditText
                        android:id="@+id/desId"
                        android:hint="Description here, x=12,y=13,xy=156"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/confirmId"
                android:text="Confirm"
                android:background="@color/colorPrimaryDark"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>